# Business Scraper Configuration Template
# Copy this file to .env and update the values for your environment

# Docker Configuration
PORT=80

# Basic Auth Settings (for frontend protection)
BASIC_AUTH_USER=your_username
BASIC_AUTH_PASS=your_secure_password

# Database
MONGODB_URI=mongodb://admin:business123@mongodb:27017/business_scraper?authSource=admin
DATABASE_NAME=business_scraper

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Frontend Configuration  
REACT_APP_API_URL=/api

# Scraping Configuration
MAX_CONCURRENT_SCRAPERS=5
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=1.0

# Browser Configuration
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
